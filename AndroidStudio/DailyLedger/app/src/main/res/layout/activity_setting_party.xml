<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingParty">

    <TextView
        android:id="@+id/tvChangeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Party Name?"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#0000FF"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tvDeletePartyData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Party's Data"
        android:textColor="#FF0000"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvChangeName"
        />
    <TextView
        android:id="@+id/tvDeleteAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        app:layout_constraintTop_toBottomOf="@id/tvDeletePartyData"
        android:text="Delete Party's Account"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>